@model List<ProductViewModel>
<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-8">
        <h3>Список продуктов</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th>Цена, руб.</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                <tr>
                    <td>@(i+1)</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Cost</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-productId="@Model[i].Id">Редактировать</a>
                    </td>
                    <td>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Remove" asp-route-productId="@Model[i].Id">Удалить</a>
                    </td>                    
                </tr>
                }

            </tbody>
        </table>

    </div>
    <div>
        <a asp-area="Admin"
           asp-controller="Product"
           asp-action="Add"
           asp-route="@await Html.PartialAsync("Add")">Добавить продукт</a>           
    </div>
</div>