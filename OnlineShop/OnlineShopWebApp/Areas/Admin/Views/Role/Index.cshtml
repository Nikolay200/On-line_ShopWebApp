@model List<RoleViewModel>
<div class="row">
    @await Html.PartialAsync("AdminLeftMenu")
    <div class="col-8">
        <h5>Список ролей</h5>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr class="text-center">
                            <th>№</th>
                            <th>Название</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr class="text-center">
                                <td>@(i + 1)</td>
                                <td>@Model[i].Name</td>                                
                                <td><a asp-area="Admin"
                                       asp-controller="Role"
                                       asp-action="Remove"
                                       asp-route-roleName="@Model[i].Name">Удалить</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div>
        <a asp-area="Admin"
           asp-controller="Role"
           asp-action="Add"
           asp-route="@Model">Добавить роль</a>           
    </div>
</div>
