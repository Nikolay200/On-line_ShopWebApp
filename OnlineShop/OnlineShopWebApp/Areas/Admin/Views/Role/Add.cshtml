@model RoleViewModel
<form method="post">
    <div>
        <h3>Создание новой роли</h3>
    </div>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="row">
        <div class="col-4 text-center">
            <ul>
                <li style="list-style-type:none">                    
                    <input asp-for="Name" type="text" class="form-control" placeholder="Название роли" />
                    <span class="text-danger" asp-validation-for="Name"></span>                  
                    <br />
                    <button class="btn btn-success" type="submit" asp-area="Admin" asp-controller="Role" asp-action="Add">Добавить роль</button>
                </li>
            </ul>
         </div>
    </div>
</form>

